program readbook;
var
 s:ansistring;
 f1:text;
 p,i,j:integer;
 tmp:string;
begin
 writeln('本文保存地址为：F:\信息学\pas\other\book.txt。阅读完成后会自动删除文本内容。');
 assign(f1,'F:\信息学\pas\other\book.txt');
 reset(f1);
 while not eof(f1) do
 begin
  readln;
  readln(f1,s);
  while length(s)>250 do
  begin
    i:=0;
    p:=1;
    while (p<235)and(i<15) do
    begin
     p:=pos(',',s);
     if p=0 then p:=pos('，',s);
     if p=0 then break;
     tmp[1]:=s[p];
     s[p]:='$';
     inc(i);
    end;
    if p=0 then break;
    for i:=1 to 250 do if s[i]='$' then s[i]:=tmp[1];
    writeln(copy(s,1,p-1));
    delete(s,1,p-1);
    readln;
  end;
  for j:=1 to length(s) do if s[j]='$' then s[j]:=tmp[1];
  writeln(s);
 end;
 close(f1);
 writeln('~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~');
 writeln('~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~');
 writeln('~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~');
 writeln('~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~');
 assign(f1,'F:\信息学\pas\other\book.txt');
 rewrite(f1);
  writeln(f1);
 close(f1);
 readln;
 writeln('~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~');
 writeln('~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~');
 writeln('~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~');
 writeln('~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~');
 readln;
 writeln('~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~');
 writeln('~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~');
 writeln('~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~');
 writeln('~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~');
 readln;
end.
